<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.hbuas.examsystem.mapper.RoomMapper">

    <!--查询所有room-->
    <select id="findAllRoom" resultType="Room">
        select * from room
    </select>

    <!--导入所有考场信息-->
    <insert id="insertAllRoom" parameterType="Room">
        insert into room (tid,rid,place,number,campus,storid)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.tid},#{item.rid},#{item.place},#{item.number},#{item.campus},#{item.storid})
        </foreach>
    </insert>
</mapper>